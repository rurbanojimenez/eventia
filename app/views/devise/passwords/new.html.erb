<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%if devise_error_messages!.empty?%>
<%else%>
  <div class="alert alert-danger">
    <%= devise_error_messages! %>
  </div>
<%end%>
<div class="row container-fluid">
  <div class="col-md-4 well">
	  <div class="form-group"><%= f.label :email %><br />
	  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

	  <div class="form-group"><%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
  </div>

</div>

<br>
<% end %>

<%= render "devise/shared/links" %>
